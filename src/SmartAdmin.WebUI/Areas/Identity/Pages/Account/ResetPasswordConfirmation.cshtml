@page
@inject Microsoft.Extensions.Localization.IStringLocalizer<ResetPasswordConfirmationModel> _localizer
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

@section PageHeading {
    <div class="col-xl-12">
        <h2 class="fs-xxl fw-500 text-white text-center">
            @ViewData["Title"]
            <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                @_localizer["Your password has been reset. Please <a asp-page=\"./Login\">click here to log in</a>"].
            </small>
        </h2>
    </div>
}


